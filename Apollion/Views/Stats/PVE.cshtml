@model Apollion.Models.StatsViewModel
@{
    ViewBag.Title = "PVE";
}

<h1 class="h-apollion">Pve</h1>

<div class="container stats">
    <div class="row">
        <div class="col col-lg-4 well stats">
            <h3 class="h-apollion">Leviathan</h3>
            @foreach (var s in Model.Value)
            {
                <div class="col col-lg-12 well stats">
                    @s
                </div>
            }
        </div>
        <div class="col col-lg-4 well stats">
            <h3 class="h-apollion">Nightfall</h3>
            @foreach (var s in Model.Value)
            {
                <div class="col col-lg-12 well stats">
                    @s
                </div>
            }
        </div>
        <div class="col col-lg-4 well stats">
            <h3 class="h-apollion">Other</h3>
            @foreach (var s in Model.Value)
            {
                <div class="col col-lg-12 well stats">
                    @s
                </div>
            }
        </div>
    </div>
</div>

